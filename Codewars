24
function getMiddle(s) {
  const newArr = s.split(""); 
  let middle;
    if(newArr.length % 2 === 0){
      middle = newArr[(newArr.length / 2)- 1]  + newArr[(newArr.length / 2)];
    } else {
        middle = newArr[Math.floor(newArr.length / 2)];
    }
  return middle;
}

