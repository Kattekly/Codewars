7
String.prototype.isUpperCase = function() {
  return String(this) === this.toUpperCase();
}

8
Убрать пробелы из строки
function noSpace(x) {
    let newStr = ''
    for(let i = 0; i < x.length; i++) {
        if(x[i] !== " "){
            newStr += x[i]
        }
    }
    return newStr
}

