15
function isTriangle(a,b,c)
{
if ((a + b <= c) || (a + c <= b) || (b + c <= a)) {
    return false;
  } 
  else {
    if ((a <= 0) || (b <= 0) || (c <= 0)) {
    return false;
    } 
    else {
    return true;
    } 
  } 
}

16
function positiveSum(arr) {
 var sum = 0;
 for(var i = 0; i < arr.length; i++) {
   if(arr[i] > 0) {
    sum += arr[i];
  }
 }
return sum;
}

17
Функция выполняет 4 мат.операции
function basicOp(operation, value1, value2) {
let answer = "";
  switch (operation) {
  case "+":
  return value1 + value2;
  case "-":
  return value1 - value2;
  case "*":
  return value1 * value2;
  case "/":
  return value1 / value2;
  return answer;
      }
}

