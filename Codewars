}


39
Проверка суммы на четное/нечетное
function oddOrEven(array) {
 let result = 1;  
  for(var i = 0; i<array.length; i++){
        result += array[i];
      }
 var num = result;    
if(Math.floor(num / 2) == num / 2) {
         //Чётное
         return "odd";
     }else{
         //Нечётное
         return "even";
     }
}
